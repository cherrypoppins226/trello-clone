{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "checkJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
