{
  "name": "trello",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "2.0.0-next.66cc7a90"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --verbose",
    "test:browser": "jest -c jest/browser/config.js --verbose",
    "test:ci": "CI=1 yarn test --ci --bail && CI=1 yarn test:browser --ci --bail",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@material-ui/core": "^1.0.0-rc.1",
    "@material-ui/icons": "^1.0.0-rc.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.4",
    "jest-image-snapshot": "^2.4.1",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1",
    "prop-types": "^15.6.1",
    "proxyquire": "^2.0.1",
    "puppeteer": "^1.4.0",
    "react-cosmos": "^4.3.0",
    "react-testing-library": "^3.0.1",
    "react-textarea-autosize": "^6.1.0"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:jsx-a11y/strict"
    ],
    "plugins": [
      "prettier",
      "jsx-a11y"
    ],
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:ci",
      "pre-push": "yarn test:ci"
    }
  }
}
